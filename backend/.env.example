# NaijaVibeCheck Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=NaijaVibeCheck
DEBUG=false
ENVIRONMENT=development
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# API Settings
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://naijavibecheck:naijavibecheck@localhost:5432/naijavibecheck

# =============================================================================
# Redis (for Celery and caching)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Instagram Scraper Account
# This is a THROWAWAY account used for scraping Instagram data.
# Do NOT use your main account - it may get banned!
# Create a separate Instagram account specifically for scraping.
# =============================================================================
INSTAGRAM_SCRAPER_USERNAME=your_scraper_account
INSTAGRAM_SCRAPER_PASSWORD=your_scraper_password

# =============================================================================
# Instagram Page Account
# This is your MAIN NaijaVibeCheck page account for publishing content.
# Keep these credentials secure!
# =============================================================================
INSTAGRAM_PAGE_USERNAME=naijavibecheck
INSTAGRAM_PAGE_PASSWORD=your_page_password

# =============================================================================
# Anthropic (Claude AI)
# Get your API key from: https://console.anthropic.com/
# Used for sentiment analysis and content generation
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-xxxxx

# =============================================================================
# DigitalOcean Spaces (Optional - for media storage)
# =============================================================================
DO_SPACES_KEY=your_spaces_key
DO_SPACES_SECRET=your_spaces_secret
DO_SPACES_BUCKET=naijavibecheck-media
DO_SPACES_REGION=nyc3
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# =============================================================================
# Scraping Settings
# =============================================================================
# Maximum number of scraper accounts to use
MAX_SCRAPER_ACCOUNTS=10
# Maximum requests per account per day (be conservative to avoid bans)
REQUESTS_PER_ACCOUNT_PER_DAY=100
# How often to check for new posts (in minutes)
SCRAPE_INTERVAL_MINUTES=30

# =============================================================================
# Viral Detection Thresholds
# Adjust these based on Nigerian celebrity engagement levels
# =============================================================================
# Minimum followers to track a celebrity
MIN_CELEBRITY_FOLLOWERS=1500000
# Minimum likes for a post to be considered viral
MIN_POST_LIKES=100000
# Minimum comments for a post to be considered viral
MIN_POST_COMMENTS=25000
# Maximum age of posts to scrape (in days)
MAX_POST_AGE_DAYS=3

# =============================================================================
# File Paths
# =============================================================================
TEMPLATES_DIR=templates
SESSIONS_DIR=sessions
GENERATED_MEDIA_DIR=generated_media
